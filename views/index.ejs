            <li><a href="#about" onclick="$('.button-collapse').sideNav('hide');">Acerca De</a></li>
            <li><a href="#pilares" onclick="$('.button-collapse').sideNav('hide');">Pilares</a></li>
            <li><a href="#unete" onclick="$('.button-collapse').sideNav('hide');">Únete</a></li>
          </ul>
        </div>
      </nav>
